<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_fondo"
    tools:context=".Temas.Equidad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"

        >


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:paddingTop="15dp"
            android:text="Equidad de gÃ©nero"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkgray"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_igualdad"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_igualdad" />

            <Button
                android:id="@+id/btn_cuestionario"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_cuest_noviazgo" />

            <Button
                android:id="@+id/btn_violentometro"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:background="@drawable/final_violentometro" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>