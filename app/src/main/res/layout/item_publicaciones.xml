<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mar"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"

        android:background="#7EA3C0"
        app:cardBackgroundColor="#7EA3C0"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_publicacion_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="68"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logo_color_nau" />

            <TextView
                android:id="@+id/titulo_publicacion_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="17"
                android:layout_marginTop="8dp"
                android:text="TÃ­tulo"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="9sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeStepGranularity="2sp"
                android:textAlignment="center"
                android:textColor="@color/white" />
            <LinearLayout
                android:id="@+id/ver_publicacion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:background="#184E77"
                android:orientation="horizontal"
                android:gravity="center"



                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"

                    app:srcCompat="@drawable/go" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>